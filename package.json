{
  "name": "votex",
  "private": true,
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon server.js",
    "build:dashboard": "cd dashboard && npm install --force && npm run build",
    "prebuild": "npm install",
    "build": "npm run build:dashboard",
    "start": "NODE_ENV=production node server.js",
    "clean": "rm -rf dashboard/dist node_modules dashboard/node_modules",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "express": "^4.17.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
